#include <stdio.h>

class Hello {
	const char *name;
};

void Hello::new()
{
	printf("Hi!\n");
}

void Hello::delete()
{
	printf("Goodbye, %s\n", this->name);
}

void Hello::say_hello()
{
	printf("Hello, %s!\n", this->name);
}

void Hello::set_name(const char *name)
{
	this->name = name;
}

int main()
{
	Hello *a = new Hello;
	Hello *b = new Hello;
	a->set_name("CjXgm");
	b->set_name("eXerigumo Clanjor");
	a->say_hello();
	b->say_hello();
	delete a;
	delete b;

	return 0;
}

